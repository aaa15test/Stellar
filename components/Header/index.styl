_white = #fff
_darkGray = #636363

.root
  display none
  border-radius 4px 4px 0 0

  +tablet()
    display flex
    padding 1u 0
    background-color #f7f7f7
    flex-direction row
    justify-content center
    width 100%

  +wide()
    padding 1u 0

.section
  background-color _white
  border-radius 8px
  margin-left 1u
  align-self center
  height 32px
  padding 1u 0
  width 154px
  &.first
    margin 0

  +wide()
    height 38px
    padding 1u 0

.sectionTitle
  color _darkGray
  font-size 14px
  text-align center

  +wide()
    font-size 16px
  