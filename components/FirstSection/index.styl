_gray = #636363
_lightGray = #dddddd
_white = #fff

.root
  width 100%
  align-items center
  border-top-color _lightGray
  border-top-width 1px
  align-self center
  background-color _white
  padding 6u 3u 4u 3u

  +tablet()
    padding 8u 6u 6u 6u

  +wide()
    padding 11u 11u 9u 11u

.title
  font-size 4u
  color _gray
  font-weight 300

.linearLine
  width 120px
  height 2px
  border-radius 2px
  background-color #a89cc8
  margin 3u 0 4u 0

  +tablet()
    background-image linear-gradient(90deg, #efa8b0, #a89cc8, #8cc9f0)

.features
  justify-content center
  flex-direction row
  flex-wrap wrap
  margin-bottom 3u

  +tablet()
    margin-bottom 9u

.feature
  align-items center
  width 100%
  margin-bottom 4u
  &.first
    margin-left 0
  &.last
    +tablet()
      margin-top 4u
      margin-bottom 0
      margin-left 0
    +desktop()
      margin-left 4u
      margin-top 0

  +tablet()
    width 44%
    margin-left 4u
    margin-bottom 0
  
  +desktop()
    margin-left 4u
    width 28%

.iconContent
  margin-bottom 4u
  width 140px
  height @width
  border 1px solid _lightGray
  border-radius 140px
  padding 0.75u

  +tablet()
    width 194px
    height @width
    border-radius 194px
    padding 1.25u

  +wide()
    width 224px
    height @width
    border-radius 224px
    padding 1.5u

.iconInside
  align-items center
  justify-content center
  border 1px solid _lightGray
  width 126px
  height  @width
  border-radius 126px

  +tablet()
    width 172px
    height  @width
    border-radius 172px

  +wide()
    width 198px
    height  @width
    border-radius 198px

.icon
  width 80px
  height @width

  +wide()
    width 100px
    height @width

.descriptionTitle
  margin-bottom 2u
  font-size 20px
  color _gray
  font-weight 300

  +wide()
    font-size 3u

.description
  line-height 3u
  text-align center
  font-size 2u
  color _gray
  font-weight 300

  +wide()
    font-size 18px
