_white = #fff

.root
  align-items center
  padding 8u 0 8u 0

  +tablet()
    padding 10u 0

  +desktop()
    padding 12u 0

  +wide()
    padding 16u 0 15u 0

.image
  width 85px
  height @width
  margin-bottom 4.5u
  border-radius 85px

.title
  font-size 40px
  margin-bottom 2u
  color _white
  font-weight 300

  +tablet()
    font-size 52px

  +wide()
    font-size 60px

.description
  text-align center
  max-width 510px

.descriptionText
  align-self center
  font-size 16px
  color rgba(_white, 0.65)
  font-weight 300
  line-height 3u

  +tablet()
    font-size 20px
    line-height 4.5u

  +wide()
    font-size 24px

.dotted
  border-bottom 1px dotted rgba(_white, 0.65)
